{% extends 'base.html.twig' %}

{% block title %}Schedule{% endblock %}

{% block body %}
    <h1>Schedule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ schedule.id }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ schedule.startDate ? schedule.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ schedule.endDate ? schedule.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Start_hour</th>
                <td>{{ schedule.startHour }}</td>
            </tr>
            <tr>
                <th>Start_minute</th>
                <td>{{ schedule.startMinute }}</td>
            </tr>
            <tr>
                <th>End_hour</th>
                <td>{{ schedule.endHour }}</td>
            </tr>
            <tr>
                <th>End_minute</th>
                <td>{{ schedule.endMinute }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_schedule_index') }}">back to list</a>

    <a href="{{ path('app_schedule_edit', {'id': schedule.id}) }}">edit</a>

    {{ include('schedule/_delete_form.html.twig') }}
{% endblock %}
