{% extends 'base.html.twig' %}

{% block title %}Price index{% endblock %}

{% block body %}
    <h1>Price index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for price in prices %}
            <tr>
                <td>{{ price.id }}</td>
                <td>{{ price.name }}</td>
                <td>{{ price.price }}</td>
                <td>
                    <a href="{{ path('app_price_show', {'id': price.id}) }}" class="btn btn-outline-secondary mb-2">表示</a>
                    <a href="{{ path('app_price_edit', {'id': price.id}) }}" class="btn btn-outline-secondary mb-2">編集</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_price_new') }}" class="btn btn-primary mb-2">新規作成</a>
{% endblock %}
