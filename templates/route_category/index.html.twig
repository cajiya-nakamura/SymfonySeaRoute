{% extends 'base.html.twig' %}

{% block title %}RouteCategory index{% endblock %}

{% block body %}
    <h1>RouteCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for route_category in route_categories %}
            <tr>
                <td>{{ route_category.id }}</td>
                <td>{{ route_category.name }}</td>
                <td>
                    <a href="{{ path('app_route_category_show', {'id': route_category.id}) }}" class="btn btn-outline-secondary mb-2">表示</a>
                    <a href="{{ path('app_route_category_edit', {'id': route_category.id}) }}" class="btn btn-outline-secondary mb-2">編集</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_route_category_new') }}" class="btn btn-primary mb-2">新規作成</a>
{% endblock %}
